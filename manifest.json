  "shortcuts": [
    {
      "name": "Nova Tarefa",
      "short_name": "Nova",
      "description": "Criar uma nova tarefa rapidamente",
      "url": "/? action=new",
      "icons": [
        {
          "src": "/icons/shortcut-new.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Tarefas de Hoje",
      "short_name": "Hoje",
      "description": "Ver tarefas de hoje",
      "url": "/?filter=today",
      "icons": [
        {
          "src": "/icons/shortcut-today.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+task",
      "url": "/?task=%s"
    }
  ],
  "display_override": ["standalone", "fullscreen", "minimal-ui"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}